{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "arg-overflow": ["warning", 3],
    "error-reason": "off",
    "indentation": ["error", 2],
    "lbrace": "off",
    "max-len": ["warning", 79],
    "no-constant": "error",
    "no-empty-blocks": "off",
    "quotes": ["error", "double"],
    "security/enforce-explicit-visibility": "error",
    "security/no-block-members": "warning",
    "security/no-inline-assembly": "warning",
    "uppercase": "off",
    "visibility-first": "error",
    "zeppelin/constant-candidates": "warning",
    "zeppelin/highlight-comments": "off",
    "zeppelin/missing-natspec-comments": "off",
    "zeppelin/no-arithmetic-operations": "error",
    "zeppelin/no-state-variable-shadowing": "warning",
    "zeppelin/no-unchecked-send": "warning",
    "zeppelin/no-unused-imports": "warning"
  }
}
